{% extends "index.twig" %}

{% block content %}

    <main data-barba="container" barba-namespace="strategy" class="{{ body_class }} bg-almond">

        {% block header %}
            {% include 'includes/components/header.twig' with { page_title: 'Strategy' } %}
        {% endblock %}

        <div class="content-wrapper relative">
            <div class="px-3 lg:grid grid-cols-2 gap-6 m-top-grid mb-28">
                <div class="col-span">
                    <div class="image-grid grid grid-cols-6 h-full">
                        <div class="col-span-4 col-start-2 h-full">
                            <div class="image-container ml-auto sticky h-full">
                                {% for item in posts %}
                                    <img src="{{ item.thumbnail.src }}" alt="{{ item.thumbnail.src|resize(1400) }}" data-featured-image="{{ loop.index }}" class="ml-auto">
                                {% endfor %}
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-span">
                    <h1 class="text-parsely text-30 hidden">Strategy</h1>
                    {% for item in posts %}
                        <table class="table-auto mb-6" data-featured-index="{{ loop.index }}">
                            <tr>
                                <td class="text-flamingo pr-6">Client</td>
                                <td>{{ item.client }}</td>
                            </tr>
                            <tr>
                                <td class="text-flamingo pr-6">Field</td>
                                <td>{{ item.terms( 'field' )|join(', ') }}</td>
                            </tr>
                            <tr>
                                <td class="text-flamingo pr-6">Challenge</td>
                                <td>{{ item.challenge }}</td>
                            </tr>
                            <tr>
                                <td class="text-flamingo pr-6">Year</td>
                                <td>{{ item.year }}</td>
                            </tr>
                            {% if item.affiliation.title %}
                                <tr>
                                    <td class="text-flamingo pr-6">Affliation</td>
                                    {% if item.affiliation.url %}
                                        <td><a href="{{ item.affiliation.url }}" class="hover:text-flamingo" target="_blank">{{ item.affiliation.title }} â†—</a></td>
                                    {% else %}
                                        <td>{{ item.affiliation.title }}</td>
                                    {% endif %}
                                </tr>
                            {% endif %}
                        </table>
                    {% endfor %}
                </div>
            </div>
        </div><!-- /content-wrapper -->

    </main>
  
{% endblock %}