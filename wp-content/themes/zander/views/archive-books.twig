{% extends "index.twig" %}

{% block header %}
    {% include 'includes/components/header.twig' with { page_title: 'Strategy' } %}
{% endblock %}

{% block content %}

	<div class="content-wrapper">
        <div class="grid grid-cols-2 gap-6 mt-28">
            <div class="col-span">
                <div class="grid grid-cols-6">
                    <div class="col-span-4 col-start-2">
                        <div class="image-container ml-auto"><img src="" alt="" class="ml-auto"></div>
                    </div>
                </div>
            </div>
            <div class="col-span">
                <h1 class="text-parsely text-30 hidden">Books</h1>
                {% for item in posts %}
                    <table class="table-auto mb-6" data-featured-image="{{ item.thumbnail.src }}">
                        <tr>
                            <td class="text-flamingo pr-6">Title</td>
                            <td>{{ item.title }}</td>
                        </tr>
                        <tr>
                            <td class="text-flamingo pr-6">Collaborators</td>
                            <td>{{ item.collaborators }}</td>
                        </tr>
                        <tr>
                            <td class="text-flamingo pr-6">Publisher</td>
                            <td>{{ item.terms( 'publication' )|join(', ') }}</td>
                        </tr>
                        <tr>
                            <td class="text-flamingo pr-6">Year</td>
                            <td>{{ item.year }}</td>
                        </tr>
                        <tr>
                            <td class="text-flamingo pr-6"></td>
                            <td class="pt-5"><a href="{{ item.purchase_link }}" target="_blank">Purchase</a></td>
                        </tr>
                    </table>
                {% endfor %}
            </div>
        </div>
	</div><!-- /content-wrapper -->
  
{% endblock %}